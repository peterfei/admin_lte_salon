<% if @result %>
flash('操作成功', 'success');
setTimeout(function () {
  $('#newModal').modal('hide');
  $('#member_index').html("<%=j render(partial:'index',locals: {members:@members})%>")
},2000);
<%else%>
$('#member_form').html("<%= j render(:partial => 'form') %>");
$('form[data-validate]').validate();
<%end%>

$('#newModal').on("hidden.bs.modal", function (e) {
  $(this).removeData('modal');
  //  $(e.target).removeData('bs.modal');
  $(this).remove();
});